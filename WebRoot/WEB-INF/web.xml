<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <description>UserServlet</description>
    <display-name>Login</display-name>
    <servlet-name>doLoginServlet</servlet-name>
    <servlet-class>bbs.servlet.doLoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>UserServlet</description>
    <display-name>Delete</display-name>
    <servlet-name>doDeleteTipServlet</servlet-name>
    <servlet-class>bbs.servlet.doDeleteTipServlet</servlet-class>
  </servlet>
  <servlet>
    <description>UserServlet</description>
    <display-name>UpdateReply</display-name>
    <servlet-name>doUpdateReplyServlet</servlet-name>
    <servlet-class>bbs.servlet.doUpdateReplyServlet</servlet-class>
  </servlet>
  <servlet>
    <description>UserServlet</description>
    <display-name>NewTopic</display-name>
    <servlet-name>doNewTopicServlet</servlet-name>
    <servlet-class>bbs.servlet.doNewTopicServlet</servlet-class>
  </servlet>
  <servlet>
    <description>UserServlet</description>
    <display-name>NewReply</display-name>
    <servlet-name>doNewReplyServlet</servlet-name>
    <servlet-class>bbs.servlet.doNewReplyServlet</servlet-class>
  </servlet>
  <servlet>
    <description>UserServlet</description>
    <display-name>Register</display-name>
    <servlet-name>doRegisterServlet</servlet-name>
    <servlet-class>bbs.servlet.doRegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <description>UserServlet</description>
    <display-name>doLogout</display-name>
    <servlet-name>doLogoutServlet</servlet-name>
    <servlet-class>bbs.servlet.doLogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <description>TipServlet</description>
    <display-name>ModifyReply</display-name>
    <servlet-name>toModifyReplyServlet</servlet-name>
    <servlet-class>bbs.servlet.toModifyReplyServlet</servlet-class>
  </servlet>
  <servlet>
    <description>TipServlet</description>
    <display-name>toTopicDetail</display-name>
    <servlet-name>toTopicDetailServlet</servlet-name>
    <servlet-class>bbs.servlet.toTopicDetailServlet</servlet-class>
  </servlet>
  <servlet>
    <description>TipServlet</description>
    <display-name>toTopicList</display-name>
    <servlet-name>toTopicListServlet</servlet-name>
    <servlet-class>bbs.servlet.toTopicListServlet</servlet-class>
  </servlet>
  <servlet>
    <description>TipServlet</description>
    <display-name>toNewTip</display-name>
    <servlet-name>toNewTipServlet</servlet-name>
    <servlet-class>bbs.servlet.toNewTipServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>3</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>3</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>doLoginServlet</servlet-name>
    <url-pattern>/doLoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doDeleteTipServlet</servlet-name>
    <url-pattern>/doDeleteTipServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doUpdateReplyServlet</servlet-name>
    <url-pattern>/doUpdateReplyServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doNewTopicServlet</servlet-name>
    <url-pattern>/doNewTopicServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doNewReplyServlet</servlet-name>
    <url-pattern>/doNewReplyServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doRegisterServlet</servlet-name>
    <url-pattern>/doRegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doLogoutServlet</servlet-name>
    <url-pattern>/doLogoutServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>toModifyReplyServlet</servlet-name>
    <url-pattern>/toModifyReplyServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>toTopicDetailServlet</servlet-name>
    <url-pattern>/toTopicDetailServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>toTopicListServlet</servlet-name>
    <url-pattern>/toTopicListServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>toNewTipServlet</servlet-name>
    <url-pattern>/toNewTipServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
  	<filter-name>encodingFilter</filter-name>
  	<filter-class>
  		bbs.struts.action.EncodingFilter
  	</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>encodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>

